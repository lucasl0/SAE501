{% extends "layouts/back-end/base.njk" %}

{% block title %}
    {% if is_edit == true %}
        Editer "{{ author.firstname }} {{ author.lastname }}"
    {% else %}
        Ajouter un Auteur
    {% endif %}
{% endblock %}

{% set chars_limit = 200 %}
{% set active_menu_item = "authors" %}

{% import "components/back-end/input-file.njk" as input_file with context %}

{% block main %}
    <div class="bg-white rounded-2xl shadow-md pb-6">
        <header class="mb-1 p-6">
            {% include "components/back-end/breadcrumb.njk" %}
            <h2 class="text-4xl">
                {% if is_edit == true %}
                    Editer "{{ author.firstname }} {{ author.lastname }}"
                {% else %}
                    Ajouter un Auteur
                {% endif %}
            </h2>
            <p class="text-sm">Les champs avec
                <span class="font-bold text-slate-700 after:content-['*'] after:ml-0.5 after:text-red-500"></span>
                sont requis
            </p>
        </header>

        <div class="px-6">
            {% for item in list_errors %}
                <p class="rounded-lg p-3 bg-red-100 text-red-800 border-solid border-x border-y border-red-700 mb-3">{{ item }}</p>
            {% endfor %}
            {% if messages.success %}
                <p class="rounded-lg p-3 bg-green-100 text-green-800 border-solid border-x border-y border-green-700 mb-3">
                    {{ messages.success }}
                </p>
            {% endif %}

            {% if is_edit == true %}
                <p class="rounded-lg p-3 bg-green-100 text-green-800 border-solid border-x border-y border-green-700 mb-3">
                    L'auteur a bien été modifié !
                </p>
            {% endif %}
            
            <form action="" method="post" enctype="multipart/form-data">
                <label class="block mb-4">
                    <span class="font-bold text-slate-700 after:content-['*'] after:ml-0.5 after:text-red-500">Nom</span>
                    <input class="block bg-white w-full border border-slate-300 rounded-md py-2 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="lastname" value="{{ author.lastname }}"/>
                </label>

                <label class="block mb-4">
                    <span class="font-bold text-slate-700 after:content-['*'] after:ml-0.5 after:text-red-500">Prénom</span>
                    <input class="block bg-white w-full border border-slate-300 rounded-md py-2 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="firstname" value="{{ author.firstname }}"/>
                </label>

                <label class="block mb-4">
                    <span class="font-bold text-slate-700">Email</span>
                    <input class="block bg-white w-full border border-slate-300 rounded-md py-2 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="email" name="email" value="{{ author.email }}"/>
                </label>

                <div class="block mb-4">
                    <label for="image">
                        <span class="font-bold text-slate-700 after:ml-0.5 after:text-red-500">Image</span>
                    </label>
                    {{ input_file.field(author.image, undefined, ".jpg, .jpeg, .png, .avif") }}
                </div>

                <label class="block mb-4">
                    <span class="font-bold text-slate-700">Bio</span>
                    <textarea name="bio" cols="15" rows="5" maxlength="{{ chars_limit }}" class="block bg-white w-full border border-slate-300 rounded-md py-2 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" aria-describedby="counter_description">{{ author.bio }}</textarea>
                    <p class="text-sm" id="counter_description">
                        {{ chars_limit }} caractères restants
                    </p>
                </label>
<div class="block mb-4">
    <label class="font-bold text-slate-700 flex items-center gap-3">
        <span>Couleur de l’auteur</span>
        <input type="color" name="color" value="{{ author.color or '#ff0000' }}" 
               style="width: 30px; height: 30px; background-color: white; border-radius: 6px;">
    </label>
</div>

<div class="block mb-4">
    <label class="font-bold text-slate-700 flex items-center gap-3">
        <span>Couleur de la bordure</span>
        <input type="color" name="colorborder" value="{{ author.colorborder or '#ff0000' }}" 
               style="width: 30px; height: 30px; background-color: white; border-radius: 6px;">
    </label>
</div>







