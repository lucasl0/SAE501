{% extends "layouts/front-end/base.njk" %}
{% block title %}Accueil{% endblock %}
{% block bubble_color %}rose{% endblock %}
{% block main %}
    <section class="grid grid-cols-1 lg:grid-cols-[1fr_24rem] gap-x-6 gap-y-4 mb-6">
        <h1 class="text-3xl font-bold lg:col-span-2 mt-6 lg:mt-0">Articles sur le BUT MMI</h1>
        <ul
            class="flex md:flex-row sm:landscape:flex-col flex-col lg:flex-col gap-6">
            {# Article 1 (BDD) #}
            {% if list_articles and list_articles[0] %}
                {% set item = list_articles[0] %}
                <li>
                    <a
                        class="flex flex-col sm:max-lg:landscape:flex-row w-full shadow-sm hocus:shadow-xl transition-shadow rounded-lg
                            overflow-hidden"
                        href="/articles/{{ item.slug }}">
                        <div class="aspect-25/14 overflow-hidden">
                            <img class="object-cover h-full w-full" src="{% if item.image %}{{ '/uploads/' ~ item.image }}{% else %}/images/image-placeholder-article.png{% endif %}" alt=""></div>
                            <section class="p-8 pb-11">
                                <h2 class="text-2xl font-bold">{{ item.title }}</h2>
                                <p>{{ item.abstract or item.content }}</p>
                                <p class="italic text-gray-600 mt-8 text-right">
                                    Par
                                    {% if item.author and item.author.firstname %}
                                        {{ item.author.firstname }}
                                        {{ item.author.lastname }}
                                    {% else %}
                                        La rédaction
                                    {% endif %}
                                </p>
                            </section>
                        </a>
                    </li>
                {% endif %}
                {# Article 2 (BDD) #}
                {% if list_articles and list_articles[1] %}
                    {% set item = list_articles[1] %}
                    <li>
                        <a
                            class="flex flex-col sm:max-lg:landscape:flex-row w-full shadow-sm hocus:shadow-xl transition-shadow rounded-lg
                                overflow-hidden"
                            href="/articles/{{ item.slug }}">
                            <div class="aspect-25/14 overflow-hidden">
                                <img class="object-cover h-full w-full" src="{% if item.image %}{{ '/uploads/' ~ item.image }}{% else %}/images/image-placeholder-article.png{% endif %}" alt=""></div>
                                <section class="p-8 pb-11">
                                    <h2 class="text-2xl font-bold">{{ item.title }}</h2>
                                    <p>{{ item.abstract or item.content }}</p>
                                    <p class="italic text-gray-600 mt-8 text-right">
                                        Par
                                        {% if item.author and item.author.firstname %}
                                            {{ item.author.firstname }}
                                            {{ item.author.lastname }}
                                        {% else %}
                                            La rédaction
                                        {% endif %}
                                    </p>
                                </section>
                            </a>
                        </li>
                    {% endif %}
                    {# Si aucun article publié #}
                    {% if (not list_articles) or (list_articles | length == 0) %}
                        <li class="text-gray-600">Aucun article publié pour le moment.</li>
                    {% endif %}
                </ul>
                <a
                    class="jpo-banniere rounded-lg overflow-hidden order-first lg:order-none"
                    href="https://www.cyu.fr/formation/construire-son-projet/salons-journee-portes-ouvertes"
                    title="Ouverture dans un nouvel onglet">
                    <div class="logo">
                        <img src="/images/logo-cyu-blanc.png" width="200" alt=""></div>
                        <section class="textes">
                            <p class="text-2xl">Journée portes ouvertes</p>
                            <p class="text-4xl mb-3">
                                12/02/2026
                                <br>
                                    de 10h à 17h
                                </p>
                                <p class="en-savoir-plus">EN SAVOIR PLUS</p>
                            </section>
                        </a>
                    </section>
                {% endblock %}